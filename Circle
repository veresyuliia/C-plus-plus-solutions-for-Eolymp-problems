#include<iostream>
#include <iomanip>
using namespace std;
int main()
{
    int r,k=0,x,y,k1;
    cin>>r;
    for(x=0;x<=r;x++)
    {
        for(y=0; y<=r;y++) 
        {
            if(x*x+y*y<=r*r){k++;}
            else{
                break;
            }
        }
    }
    k*=4;
    k-=(4*r)+3;
    cout<<k;

}

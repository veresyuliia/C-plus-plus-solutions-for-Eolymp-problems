#include <iostream>

using namespace std;

 int main()
 {
    long long n,m,x=0,res=0;
    cin>>n>>m;
    int a[n];
    for(int i=0;i<n;i++)
    {
        cin>>a[i];
        res+=a[i];
        if(a[i]>x)
        {
            x=a[i];
        }
    }
    res=(res+m-1)/m;
    if(res<x)
    {
        res=x;
    }
    cout<<res;

     return 0;
}
